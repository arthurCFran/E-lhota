generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Produto {
  id_produto     Int      @id @default(autoincrement())
  nome           String
  descricao      String?
  categoria      String?
  granulacao     Int?
  material       String?
  comprimento_mm Int?
  largura_mm     Int?
  altura_mm      Int?
  peso_g         Int?
  preco          Decimal
  estoque        Int
  imagem_url     String?
  data_cadastro  DateTime @default(now())

  @@map("produtos")
}
